<main>
    <div class="container my-5">
        <h1 class="text-center mb-5">CARRITO DE COMPRAS</h1>
        {{#if cart.products.length}}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each cart.products}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.quantity}}</td>
                    <td>${{this.price}}</td>
                    <td>${{this.quantity_price}}</td>
                    <td>
                        <a href="/api/carts/{{../cart._id}}/products/{{this._id}}" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <div class="d-flex justify-content-end">
            <h3>Total: ${{cart.total}}</h3>
        </div>
        <div class="d-flex justify-content-end mt-3">
            <a href="/checkout" class="btn btn-primary">Ir a Checkout</a>
        </div>
        {{else}}
        <p class="text-center">Tu carrito está vacío.</p>
        {{/if}}
    </div>
</main>